// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                  Int           @id @default(autoincrement())
  balance             Decimal       @default(100.00)
  user                User?
  transactionDebited  Transaction[] @relation("transactionDebited")
  transactionCredited Transaction[] @relation("transactionCredited")

  @@map("Accounts")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  account   Account @relation(fields: [accountId], references: [id])
  accountId Int     @unique

  @@map("Users")
}

model Transaction {
  id                  Int      @id @default(autoincrement())
  transactionDebited  Account  @relation("transactionDebited", fields: [debitedAccountId], references: [id])
  transactionCredited Account  @relation("transactionCredited", fields: [creditedAccountId], references: [id])
  debitedAccountId    Int      @unique
  creditedAccountId   Int      @unique
  value               Decimal
  createdAt           DateTime @default(now())

  @@map("Transactions")
}
